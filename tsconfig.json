{
    "compileOnSave": true,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "isolatedModules": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitThis": false,
        "outDir": "build/esm",
        "paths": {
            "*": [
                "types/*"
            ],
            "@/*": [
                "src/*"
            ]
        },
        "preserveConstEnums": true,
        "pretty": true,
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es6"
    },
    "exclude": [
        "build",
        "test",
        "node_modules",
        "**/*.spec.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "scripts": {
        "prepublish": "tsc"
    }
}
